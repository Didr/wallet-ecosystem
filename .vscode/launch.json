{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Docker: Attach (Issuer)",
			"port": 9259,
			"restart": true,
			"localRoot": "${workspaceFolder}/wallet-enterprise/src",
			"remoteRoot": "/app/dist/src",
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"autoAttachChildProcesses": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Docker: Attach (Verifier)",
			"port": 9260,
			"restart": true,
			"localRoot": "${workspaceFolder}/wallet-enterprise/src",
			"remoteRoot": "/app/dist/src",
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"autoAttachChildProcesses": true
		},
		{
			"name": "wallet-common Vitest",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/lib/wallet-common/node_modules/vitest/vitest.mjs",
			"args": ["run", "--inspect-brk", "--no-file-parallelism", "lib/wallet-common"],
			"autoAttachChildProcesses": true,
			"skipFiles": ["<node_internals>/**"],
			"smartStep": true,
			"sourceMaps": true,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/lib/wallet-common/**",
				"!**/node_modules/**"
			],
			"env": {
				"NODE_ENV": "test"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}